<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:title="Audit"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/actionBarSize"
        android:background="?android:attr/colorPrimary"
        android:theme="@android:style/ThemeOverlay.Material.Dark.ActionBar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46.5dp"
        android:orientation="horizontal"
        android:layout_margin="@dimen/spacing_middle"
        android:background="@drawable/shadow_edittext">

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:textSize="24dp"
                android:background="@drawable/shadow_edittext"
                android:id="@+id/spinnerrr"
                android:layout_width="363.0dp"
                android:layout_height="50dp"
                android:hint="Source"
                android:textColorHint="@color/colorPrimaryText"
                android:textColor="@color/colorPrimaryText"
                android:layout_marginLeft="0.0dp"
                android:maxLength="27"
                android:padding="8dp"
                android:layout_marginRight="5.5dp" />

            <Button
                android:drawableStart="@drawable/outline_qr_code_24"
                android:layout_margin="@dimen/spacing_small"
                android:layout_width="32.5dp"
                android:layout_height="60.0dp"
			    android:background="@drawable/rect" 
                android:id="@+id/btn_scan_asset"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="4.5dp" />

        </RelativeLayout>
    

        <com.google.android.material.tabs.TabLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:tabMode="scrollable"
            app:tabContentStart="56dp">
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tabs"
            />
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tabs"
            />
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tabs"
            />
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tabs"
            />
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tabs"
            />
        </com.google.android.material.tabs.TabLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="84.5dp"
            android:layout_marginLeft="@dimen/mtrl_card_spacing"
            android:layout_marginTop="@dimen/mtrl_card_spacing"
            android:layout_marginRight="@dimen/mtrl_card_spacing"
            android:minHeight="200dp">

            <!-- Card contents. -->
            <TextView
                android:id="@+id/areaLocation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold"
                android:textAppearance="@style/FontSemiBold"
                android:textSize="@dimen/font_size_normal"
                tools:text="Assets" />

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="84.5dp"
            android:layout_marginLeft="@dimen/mtrl_card_spacing"
            android:layout_marginTop="@dimen/mtrl_card_spacing"
            android:layout_marginRight="@dimen/mtrl_card_spacing"
            android:minHeight="200dp">

            <!-- Card contents. -->
            <TextView
                android:id="@+id/areaLocation2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold"
                android:textAppearance="@style/FontSemiBold"
                android:textSize="@dimen/font_size_normal"
                tools:text="Found" />


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="84.5dp"
            android:layout_marginLeft="@dimen/mtrl_card_spacing"
            android:layout_marginTop="@dimen/mtrl_card_spacing"
            android:layout_marginRight="@dimen/mtrl_card_spacing"
            android:minHeight="200dp">

            <!-- Card contents. -->
            <TextView
                android:id="@+id/areaLocation3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold"
                android:textAppearance="@style/FontSemiBold"
                android:textSize="@dimen/font_size_normal"
                tools:text="Misplaced" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="84.5dp"
            android:layout_marginLeft="@dimen/mtrl_card_spacing"
            android:layout_marginTop="@dimen/mtrl_card_spacing"
            android:layout_marginRight="@dimen/mtrl_card_spacing"
            android:minHeight="200dp">

            <!-- Card contents. -->
            <TextView
                android:id="@+id/areaLocation4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold"
                android:textAppearance="@style/FontSemiBold"
                android:textSize="@dimen/font_size_normal"
                tools:text="Not Found" />
        </com.google.android.material.card.MaterialCardView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/areas_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="150.5dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="0.0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/areas_recycler_vieww"
            android:layout_width="match_parent"
            android:layout_height="150.5dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="0.0dp" />
    </LinearLayout>

</LinearLayout>

